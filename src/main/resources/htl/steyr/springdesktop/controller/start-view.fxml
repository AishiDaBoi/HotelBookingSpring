<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" styleClass="root" stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml" fx:controller="htl.steyr.springdesktop.controller.StartController">
   <padding>
      <Insets top="30" right="30" bottom="30" left="30"/>
   </padding>

   <Label text="Hotel Booking System" styleClass="title-label"/>

   <GridPane hgap="20" vgap="20" alignment="CENTER">
      <Button text="Customer Management" onAction="#openCustomerManagement" styleClass="menu-button" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
      <Button text="Room Management" onAction="#openRoomManagement" styleClass="menu-button" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
      <Button text="Room Category Management" onAction="#openRoomCategoryManagement" styleClass="menu-button" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
      <Button text="Room Type Management" onAction="#openRoomTypeManagement" styleClass="menu-button" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
      <Button text="Booking Management" onAction="#openBookingManagement" styleClass="menu-button" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
   </GridPane>

   <Button text="Exit" onAction="#exitApplication" styleClass="exit-button"/>
</VBox>
