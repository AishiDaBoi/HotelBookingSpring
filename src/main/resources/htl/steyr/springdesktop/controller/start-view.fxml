            <content>
               <fx:include source="room-view.fxml"/>
            </content>
         </Tab>
         <Tab text="Room Category Management">
            <content>
               <fx:include source="room-category-view.fxml"/>
            </content>
         </Tab>
         <Tab text="Room Type Management">
            <content>
               <fx:include source="room-type-view.fxml"/>
            </content>
         </Tab>
         <Tab text="Booking Management">
